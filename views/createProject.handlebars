<section id="create-project">
    <div class="container">
        <div class="row">
            <h1 class="section_title">Create <span class="citron">Project</span></h1>
            <form action="/projects/create" method="post" class="form">
                <div class="from-group col-5">
                    <label class="form-label" for="from-input">Title</label>
                    <input class="form-input" type="text" placeholder="Project Name" name="title" required />
                </div>

                <div class="form-group col-5">
                    <label class="form-label" for="form-input">Description</label>
                    <textarea class="form-input" id="input-decsription" placeholder="Type project description" row="5" name="desc"></textarea>
                </div>

                <div class="form-group col-5">
                    <label class="form-label" for="form-input">Link</label>
                    <input class="form-input" type="text" placeholder="Project Link" name="link"  />
                </div>

                <div class="form-group col-5">
                    <label class="form-label" for="form-input">Date</label>
                    <input class="form-input" type="text" placeholder="Project Date" name="date" required />
                </div>

                <button type="submit" class="btn btn-primary col-1">Submit</button>
            </form>
        </div>
    </div>
</section>