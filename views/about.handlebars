<div id="main">
    <section id="skills">
    <div class="container">
        <div class="row">
            {{#if m_skills.length}}
            <h1 class="SkillsName">
                Here are my Skills
            </h1>
            <ul class="SkillsList">
                {{#each m_skills}}
                <ul class="">
                    <li class="">
                        <div class="skillcontainer">
                            <div class="skilldescription">

                                <h1 class="skill--name">
                                    {{SkillName}}
                                </h1>

                                <p class="skill--para">
                                    {{SkillDesc}}
                                </p>

                                <a href="/about/skills/{{id}}">
                                    View Skill
                                </a>
                            </div>
                        </div>
                    </li>
                </ul>
                {{/each}}
            </ul>
        {{else}}
        <h1>Sorry there are no skills currently</h1>
        {{/if}}
        {{#if isLoggedIn}}
        <li><a href="/about/skills/create">Create Skill</a></li>
        <li><a href="/about/educations/create">Create Education</a></li>
        <li><a href="/about/experience/create">Create Experience</a></li>
        {{/if}}

        </div>
    </div>
</section>
</div>
