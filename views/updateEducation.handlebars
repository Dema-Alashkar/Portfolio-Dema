<section>
    <div class="row">
    <h1 class="sectionname">Update <span class="citron">education</span></h1>

    <div class="createimgwrapper">
        <img src="/public/assets/update.svg" alt="bild" class="createimg">
    </div>

    <form action="/educations/{{education.id}}/update" method="POST" class="form">

        <div class="form-group col-5">
            <label class="form-label" for="form-input">name</label>
            <input class="form-input" type="text" placeholder="education name" name="name" value="{{education.name}}"
                required />
        </div>

    <div class="form-group col-5">
        <label class="form-label" for="input-description">Description</label>
        <textarea class="form-input" id="input-description" placeholder="Type education description" rows="5"
        name="description">{{education.description}}</textarea>
    </div>


    <div class="form-group col-5">
        <label class="form-label" for="input-StartDate">StartDate</label>
        <input class="form-input" type="text" placeholder="education StartDate" name="StartDate" value="{{education.StartDate}}" /required>
    </div>
    
    <div class="form-group col-5">
         <label class="form-label" for="input-EndDate">EndDate</label>
         <input class="form-input" type="text" placeholder="education EndDate" name="EndDate" value="{{education.EndDate}}" /required>
    </div>

    <button type="submit" class="btn btn-primary col-1">Update</button>
    </form>

</div>
</section>
