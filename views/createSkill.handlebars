<section id="create-skill">
    <div class="container">
        <div class="row">
            {{> errors}}
            <h1 class="section_title">Create <span class="citron">Skill</span></h1>
            <div class="create-img-wrapper">
                <img src="" alt="">
            </div>
            <form action="/about/skills/create" method="POST" class="form">

                <div class="from-group col-5">
                    <label class="form-label" for="from-input">Title</label>
                    <input class="form-input" type="text" placeholder="Skill Name" name="title" required />
                </div>

                <div class="form-group col-5">
                    <label class="form-label" for="form-input">Description</label>
                    <textarea class="form-input" id="input-decsription" placeholder="Type Skill description" row="5" name="description"></textarea>
                </div>


                <button type="submit" class="btn btn-primary col-1">Submit</button>
            </form>
        </div>
    </div>
</section>